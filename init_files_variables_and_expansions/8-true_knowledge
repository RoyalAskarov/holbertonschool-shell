#!/bin/bash
# 1. Check if the file/directory exists
if [ -e "school" ]; then
    echo "school file exists"

    # 2. Check if it is empty or not (This must happen for both files and directories)
    if [ -s "school" ]; then
        echo "school file is not empty"
    else
        echo "school file is empty"
    fi

    # 3. Check if it is a regular file
    if [ -f "school" ]; then
        echo "school is a regular file"
    fi
    # Requirement: "if not a regular file: (nothing)". 
    # This means do NOT include an 'else' block here.

else
    echo "school file does not exist"
fi
